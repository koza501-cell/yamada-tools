'use client';
import { useState } from 'react';
import { useRouter } from 'next/navigation';
import ImageUpload from '@/components/ImageUpload';

export default function CreateBlogPage() {
  const router = useRouter();
  const [step, setStep] = useState(1);
  const [loading, setLoading] = useState(false);
  const [formData, setFormData] = useState({
    topic: '',
    category: 'PDF',
    style: '専門的だが親しみやすい',
    featuredImage: '',
    scheduledDate: '',
    status: 'published'
  });
  const [generatedBlog, setGeneratedBlog] = useState<any>(null);

  const categories = ['PDF', 'セキュリティ', 'ビジネス', '生産性', 'データ管理'];
  const styles = [
    '専門的だが親しみやすい',
    'カジュアルで読みやすい',
    '詳細で技術的',
    'シンプルで簡潔'
  ];

  const handleGenerate = async () => {
    if (!formData.topic) {
      alert('トピックを入力してください');
      return;
    }

    setLoading(true);
    try {
      const response = await fetch('/api/admin/blog', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          ...formData,
          status: 'draft'
        }),
      });

      const data = await response.json();

      if (data.success) {
        setGeneratedBlog(data.blog);
        setStep(2);
      } else {
        alert('生成エラー: ' + data.error);
      }
    } catch (error: any) {
      alert('生成エラー: ' + error.message);
    } finally {
      setLoading(false);
    }
  };

  const handlePublish = async () => {
    setLoading(true);
    try {
      const response = await fetch('/api/admin/blog/publish', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          slug: generatedBlog.slug,
          scheduledDate: formData.scheduledDate,
          status: formData.status
        }),
      });

      const data = await response.json();

      if (data.success) {
        alert(data.message);
        router.push('/admin/blog/manage');
      } else {
        alert('公開エラー: ' + data.error);
      }
    } catch (error: any) {
      alert('公開エラー: ' + error.message);
    } finally {
      setLoading(false);
    }
  };

  return (
    <div className="min-h-screen bg-gray-50 p-8">
      <div className="max-w-4xl mx-auto">
        <div className="bg-white rounded-lg shadow-md p-6 mb-6">
          <h1 className="text-3xl font-bold text-gray-900 mb-2">
            ブログ記事作成
          </h1>
          <div className="flex items-center space-x-4 mt-4">
            <div className={`flex items-center ${step >= 1 ? 'text-blue-600' : 'text-gray-400'}`}>
              <div className={`w-8 h-8 rounded-full flex items-center justify-center ${step >= 1 ? 'bg-blue-600 text-white' : 'bg-gray-300'}`}>
                1
              </div>
              <span className="ml-2 font-medium">基本情報</span>
            </div>
            <div className="flex-1 h-1 bg-gray-300"></div>
            <div className={`flex items-center ${step >= 2 ? 'text-blue-600' : 'text-gray-400'}`}>
              <div className={`w-8 h-8 rounded-full flex items-center justify-center ${step >= 2 ? 'bg-blue-600 text-white' : 'bg-gray-300'}`}>
                2
              </div>
              <span className="ml-2 font-medium">プレビュー・公開</span>
            </div>
          </div>
        </div>

        {step === 1 && (
          <div className="bg-white rounded-lg shadow-md p-6">
            <h2 className="text-xl font-bold text-gray-900 mb-6">ステップ1: 基本情報入力</h2>

            <div className="space-y-6">
              <div>
                <label className="block text-sm font-medium text-gray-700 mb-2">
                  ブログトピック *
                </label>
                <input
                  type="text"
                  value={formData.topic}
                  onChange={(e) => setFormData({ ...formData, topic: e.target.value })}
                  placeholder="例: PDFパスワード保護の最新セキュリティ対策"
                  className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                />
              </div>

              <div>
                <label className="block text-sm font-medium text-gray-700 mb-2">
                  カテゴリー *
                </label>
                <select
                  value={formData.category}
                  onChange={(e) => setFormData({ ...formData, category: e.target.value })}
                  className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                >
                  {categories.map(cat => (
                    <option key={cat} value={cat}>{cat}</option>
                  ))}
                </select>
              </div>

              <div>
                <label className="block text-sm font-medium text-gray-700 mb-2">
                  文章スタイル
                </label>
                <select
                  value={formData.style}
                  onChange={(e) => setFormData({ ...formData, style: e.target.value })}
                  className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                >
                  {styles.map(style => (
                    <option key={style} value={style}>{style}</option>
                  ))}
                </select>
              </div>

              <ImageUpload
                currentImage={formData.featuredImage}
                onImageUploaded={(url) => setFormData({ ...formData, featuredImage: url })}
              />

              <div>
                <label className="block text-sm font-medium text-gray-700 mb-2">
                  公開ステータス
                </label>
                <div className="flex items-center space-x-4">
                  <label className="flex items-center">
                    <input
                      type="radio"
                      value="published"
                      checked={formData.status === 'published'}
                      onChange={(e) => setFormData({ ...formData, status: e.target.value })}
                      className="mr-2"
                    />
                    <span>即時公開</span>
                  </label>
                  <label className="flex items-center">
                    <input
                      type="radio"
                      value="scheduled"
                      checked={formData.status === 'scheduled'}
                      onChange={(e) => setFormData({ ...formData, status: e.target.value })}
                      className="mr-2"
                    />
                    <span>予約投稿</span>
                  </label>
                  <label className="flex items-center">
                    <input
                      type="radio"
                      value="draft"
                      checked={formData.status === 'draft'}
                      onChange={(e) => setFormData({ ...formData, status: e.target.value })}
                      className="mr-2"
                    />
                    <span>下書き</span>
                  </label>
                </div>
              </div>

              {formData.status === 'scheduled' && (
                <div>
                  <label className="block text-sm font-medium text-gray-700 mb-2">
                    公開予定日
                  </label>
                  <input
                    type="date"
                    value={formData.scheduledDate}
                    onChange={(e) => setFormData({ ...formData, scheduledDate: e.target.value })}
                    min={new Date().toISOString().split('T')[0]}
                    className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                  />
                </div>
              )}

              <button
                onClick={handleGenerate}
                disabled={loading}
                className="w-full bg-blue-600 text-white py-3 px-6 rounded-lg hover:bg-blue-700 disabled:bg-gray-400 font-medium"
              >
                {loading ? '生成中...' : 'ブログを生成'}
              </button>
            </div>
          </div>
        )}

        {step === 2 && generatedBlog && (
          <div className="bg-white rounded-lg shadow-md p-6">
            <h2 className="text-xl font-bold text-gray-900 mb-6">ステップ2: プレビュー・公開</h2>

            {formData.featuredImage && (
              <div className="mb-6">
                <img 
                  src={formData.featuredImage} 
                  alt={generatedBlog.title}
                  className="w-full max-w-2xl mx-auto rounded-lg shadow-md"
                />
              </div>
            )}

            <div className="border-b pb-4 mb-4">
              <h3 className="text-2xl font-bold text-gray-900 mb-2">
                {generatedBlog.title}
              </h3>
              <div className="flex items-center space-x-4 text-sm text-gray-600">
                <span>カテゴリー: {generatedBlog.category}</span>
                <span>読了時間: {generatedBlog.readTime}</span>
                <span>公開日: {generatedBlog.publishDate}</span>
              </div>
              {generatedBlog.tags && (
                <div className="flex flex-wrap gap-2 mt-2">
                  {generatedBlog.tags.map((tag: string, i: number) => (
                    <span key={i} className="px-2 py-1 bg-blue-100 text-blue-800 text-xs rounded">
                      {tag}
                    </span>
                  ))}
                </div>
              )}
            </div>

            <div className="prose max-w-none mb-6">
              <div dangerouslySetInnerHTML={{ __html: generatedBlog.content.replace(/\n/g, '<br/>') }} />
            </div>

            <div className="flex space-x-4">
              <button
                onClick={() => setStep(1)}
                className="flex-1 bg-gray-200 text-gray-800 py-3 px-6 rounded-lg hover:bg-gray-300 font-medium"
              >
                戻る
              </button>
              <button
                onClick={handlePublish}
                disabled={loading}
                className="flex-1 bg-green-600 text-white py-3 px-6 rounded-lg hover:bg-green-700 disabled:bg-gray-400 font-medium"
              >
                {loading ? '処理中...' : formData.status === 'draft' ? '下書き保存' : '公開する'}
              </button>
            </div>
          </div>
        )}
      </div>
    </div>
  );
}
